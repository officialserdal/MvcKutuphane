@using MvcKutuphne.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>KATEGORİLER</h2>
<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>     
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td><a href="/Kategori/KategoriSil/@x.ID"class="btn btn-danger">Sil</a>
            <td><a href="/Kategori/KategoriGetir/@x.ID"class="btn btn-success">Güncelle</a>
            
        </tr>

    }
</table>
<a href="/Kategori/Kategoriekle/"class="btn btn-primary">Yeni Kategori Ekle</a>

